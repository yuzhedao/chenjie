<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title </title>
    <link rel="shortcut icon" href="~/images/logo.ico" type="image/x-icon"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            overflow-x: hidden;
        }

        .dub-eat {
            list-style-type: none;
            font-size: 15px;
            margin-top: 10px;
            padding: 10px;
            line-height: 20px;
            background-color: #534a19;
            border-radius: 10px;
            border-radius: 10px;
            text-align: center;
        }

        #left-side {
            position: fixed;
            height: 1003px;
            background-color: black;
            opacity: 0.688;

        }

        a {
            color: white;
           
        }

        .chuangjian {
            color: red;
        }


        .no-color a {
            color: black;
        }

            .no-color a:nth-child(1) {
                padding: 6px;
                border-radius: 5px;
                color: white;
                font-weight: bold;
                background-color: slategrey;
            }


        .vju-hgdg {
            background-color: forestgreen;
        }

        .yhyg-ggrd {
            background-color: firebrick;
        }

        .bgf-jun {
            position: fixed;
            left: 190px;
            top: 55px;
        }
    </style>


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="opacity:0.85">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("应用程序名称", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                    <li>@Html.ActionLink("关于", "About", "Home")</li>
                    <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>
                    <li>@Html.ActionLink("登录", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content col-md-2" id="left-side">
        <a href="/Home/Index">
            <ul class="dub-eat">
                <li>
                    首页
                </li>
            </ul>
        </a>
        <a href="~/Classes/Index">
            <ul class="dub-eat">
                <li>
                    班级
                </li>
            </ul>
        </a>
        <a href="http://localhost:54615/Teachers/Index">
            <ul class="dub-eat">
                <li>
                    教师
                </li>
            </ul>
        </a>
        <a href="http://localhost:54615/Students/Index">
            <ul class="dub-eat">
                <li>
                    学生
                </li>
            </ul>
        </a>
        <a href="http://localhost:54615/CourseSubejects/Index">
            <ul class="dub-eat">
                <li>
                    课程科目
                </li>
            </ul>
        </a>
        <a href="http://localhost:54615/CourseArranges/Index">
            <ul class="dub-eat">
                <li>
                    课程安排
                </li>
            </ul>
        </a>
    </div>
    <div class="container body-content col-md-9" style="position:relative;left:290px;">
        <div class="bgf-jun">
            <img src="~/images/houtaiguanli-shensuotubiao.png" />
        </div>
        @RenderBody()
       
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
     <script>
         //1.获取要操作的元素
         var leftSide = document.querySelector("#left-side"),
             btn = document.querySelector(".bgf-jun"),
             container = document.querySelector(".col-md-9"),
             bool = true;
            console.log(container)
         btn.onclick = function () {
             btn.style.transition = "all .5s";
             //leftSide.style.left = "-" + 240 + "px";
             //leftSide.style.display = "none";
             //leftSide.style.opacity = 0;
             if (bool) {
                  leftSide.style.transition="all .5s";
                 leftSide.style.left = "-" + 240 + "px";
                 btn.style.left = 2 + "px";
                 btn.style.transform = "rotate(180deg)";
                 container.style.left =  178 + "px";
                 bool = false;
             } else {
                  leftSide.style.transition="all .5s";
                 leftSide.style.left = 0 + "px";
                 btn.style.left = 195 + "px";
                 btn.style.transform = "rotate(0deg)";
                  container.style.left =  290 + "px";
                 bool = true;
             }
         }
      </script>
</body>
</html>
