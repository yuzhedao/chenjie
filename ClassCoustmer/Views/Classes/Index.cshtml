@model IEnumerable<ClassCoustmer.Models.Classes>
@{
    ViewBag.Title = "Index";
}
<style>
    #font-size {
        text-align: center;
        font-size: 16px;
    }

        #font-size a:nth-child(1) {
            background-color: rgba(0, 128, 74, 1);
            color: white;
            border-radius: 5px;
            padding: 6px;
        }

        #font-size a:nth-child(2) {
            background-color: lightslategrey;
            color: white;
            border-radius: 5px;
            padding: 6px;
        }

        #font-size a:nth-child(3) {
            background-color: red;
            color: white;
            border-radius: 5px;
            padding: 6px;
        }

    h2 {
        font-family: Centaur;
        font-size: 2.1em;
        text-align: center;
    }
</style>

<h2>班级管理</h2>

<p style="color:red !important;">
    <a href="~/Classes/Create" class="chuangjian">创建</a>
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacha)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacha)
            </td>
            <td id="font-size">
                @Html.ActionLink("编辑", "Edit", new { id = item.Id }) |
                @Html.ActionLink("详情", "Details", new { id = item.Id }) |
                @Html.ActionLink("删除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
